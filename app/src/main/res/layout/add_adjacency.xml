<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/LL2PAddressPrompt"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter LL2P Address: "
            android:textSize="16sp" />

        <EditText
            android:id="@+id/LL2PEditText"
            android:padding="3dp"
            android:background="@color/colorAccentLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="EX: ABCDEF"
            android:inputType="textMultiLine"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/IPAddressPrompt"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter IP Address: "
            android:textSize="16sp" />

        <EditText
            android:id="@+id/IPEditText"
            android:padding="3dp"
            android:background="@color/colorAccentLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="EX: 27.27.27.27"
            android:inputType="textMultiLine"
            android:textSize="16sp" />

        <Button
            android:id="@+id/addAdjacencyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Adjacency" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>